# Frontend URL
FRONTEND_URL=http://localhost:19006

# CORS Configuration
CORS_ORIGIN=http://localhost:19006

# Email Configuration (optional, for sending invites)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
